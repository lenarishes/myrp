-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      - if @class_title == 'true'
        - logger.debug("@class_title is #{@class_title}")        
        %th.hilite= link_to "Movie Title", movies_path(:order => 'title', :title => true, :release => false), :id => "title_header"
      - else
        - logger.debug("@class_title is #{@class_title}")
        %th= link_to "Movie Title", movies_path(:order => 'title', :title => true, :release => false), :id => 'title_header'
      %th Rating
      - if @class_release == 'true'
        - logger.debug("@class_release is #{@class_release}")
        %th.hilite= link_to "Release Date", movies_path(:order => 'release_date', :title => false, :release => true), :id => "release_date_header"
      - else
        %th= link_to "Release Date", movies_path(:order => 'release_date', :title => false, :release => true), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
